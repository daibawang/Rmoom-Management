/* pages/roomselect/roomselect.wxss */
.body{
  background:linear-gradient(#ffbc5b 0%,#fe6638 100%);
  width: 100%;
  margin-top: -78px;
  padding-top: 80px;
  height: 100vh;
  padding-bottom: 100px;
  display: flex;
  flex-direction: row;
}
.container-left{
  float: left;
  background:linear-gradient(#ffbc5b 0%,#fe6638 100%);
  width: 2%;
  z-index: 20;
  margin-left: 0rpx;
}
.container-right{
  float: right;
  background:linear-gradient(#ffbc5b 0%,#fe6638 100%);
  width: 2.5%;
  z-index: 20;
  margin-right: 0rpx;
}
.container{
  margin-top: 150rpx;
  margin-left: auto;
  margin-right: auto;
  width: 95%;
  background: #f5f5f5;
  border-radius: 20rpx;
  /* height: 1800rpx; */
  padding-bottom: 30rpx;
}
/* 切换页面 */
.swiper-tab{
  /* position: fixed; */
  margin-top: -180rpx;
	width: 590rpx;
  /* border: 1rpx solid red; */
	text-align: center;
	line-height: 70rpx;
  }
.swiper-tab-list{  
  font-family: "PingFang SC";
  font-size: 30rpx;
  display: inline-block;
	width: 28%;
  margin:10rpx;
  color: #5b5a5a;
}
.on{ 
  color: #FFB056;
	border-bottom: 9rpx solid #FFB056;
  }
.swiper-box{ 
  top: 300rpx;
  position: absolute;
  display: block; 
  width: 100%; 
  overflow: hidden; 
  }
.swiper-box view{
	/* text-align: center; */
}
.swiper-item1-view{
  margin-left: auto;
  margin-right: auto;
  width: 612rpx;
}
.room-yd-view{
  margin-bottom: 40rpx;
  border-radius: 20rpx;
  width: 610rpx;
  display:flex;
  height: 410rpx;
  flex-direction: column;
  /* border: 3rpx solid #f8f8f8; */
  box-shadow: 0 0 20rpx #ececec;
}
.room-img{
  width: 100%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background: #f8f8f8;
  height: 344rpx;
}
.room-img image{
  width: 100%;
  height: 100%;
}
.room-bottom{
  display: flex;
  flex-direction: space-between;
  height: 80rpx;
  width: 100%;
  background: #f8f8f8;
  /* background: red; */
  margin-top: 0rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  line-height: 80rpx;
}
.room-bottom-romname{
  font-size: 30rpx;
  font-family: "PingFang SC";
  color: #4d4d4d;
  letter-spacing: 3rpx;
  line-height: 0.86;
  margin-left: 35rpx;
  margin-top: 20rpx;
}
.button{
  margin-top: 5rpx;
  margin-right: 25rpx;
  line-height: 50rpx;
  width: 115rpx;
  height: 50rpx;
  background: #FFB056;
  color: white;
  font-size:25rpx;
  border-radius: 40rpx;
}


button::after{ 
  border: none; 
  }
/* 弹出层 */
.modal-box{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.4);
  overflow: hidden;
  }
  .modal-body{
  margin: 348rpx auto;
  width: 650rpx;
  border-radius: 20rpx;
  background: white;
  }
  .textstyle{
    color: red;
  }
  .second{
    color: blue;
  }
  .modal-top{
    width: 100%;
    /* border:1px solid red; */
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
  }
  .modal-top image{
    width: 100%;
    height: 100%;
  }
  .modal-bottom-patr1{
    width: 600rpx;
    margin: 0rpx auto;
    /* border: 1rpx solid red; */
  }
  .part1-button{
  /* margin-top: -90rpx; */
  /* margin-right: 25rpx; */
